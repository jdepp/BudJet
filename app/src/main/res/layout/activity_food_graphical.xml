<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FoodGraphicalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/graph_choice_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/graph_list"
            android:spinnerMode="dropdown"/>
        <Button
            android:id="@+id/view_graph_food"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#32CD32"
            android:onClick="viewGraphClicked"
            android:text="Update Graph"
            android:textColor="#ffffff"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Overview"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"/>

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/chart_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>